{
  "name": "alexander-beck-studio-website",
  "private": true,
  "version": "1.0.0",
  "description": "Build scripts for bouncy-balls embed",
  "scripts": {
    "integrate": "node integrate-webflow.js",
    "build": "node source/build.js",
    "watch": "chokidar 'source/balls-source.html' 'source/current-config*.json' -c \"npm run build\"",
    "serve": "cd public && python3 -m http.server 8000",
    "dev:source": "open 'source/balls-source.html'",
    "dev": "npm run build && npm run serve",
    "save-config": "node source/save-config.js",
    "test": "playwright test",
    "test:smoke": "playwright test tests/smoke.spec.ts",
    "test:sim": "playwright test tests/simulation.spec.ts",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "chokidar-cli": "^3.0.0",
    "terser": "^5.31.0"
  }
}




