{
  "name": "alexander-beck-studio-website",
  "private": true,
  "version": "1.0.0",
  "description": "Alexander Beck Studio website with interactive particle physics",
  "author": "Alexander Beck",
  "license": "MIT",
  "scripts": {
    "start": "cd public && python3 -m http.server 8000",
    "start:source": "cd source && python3 -m http.server 8001",
    "build": "NODE_ENV=production node build-production.js --modules",
    "build-production": "NODE_ENV=production node build-production.js --modules",
    "build:modules": "NODE_ENV=production node build-production.js --modules",
    "build:modules:dev": "NODE_ENV=development node build-production.js --modules",
    "watch": "chokidar 'source/**/*' 'webflow-export/**/*' -c \"npm run build:modules:dev\"",
    "watch:modules": "chokidar 'source/**/*' 'webflow-export/**/*' -c \"npm run build:modules:dev\"",
    "dev": "npm run build:modules:dev && npm start",
    "dev:modules": "npm run start:source",
    "dev-production": "npm run build && npm start",
    "help": "echo 'ðŸ“¦ Build System Commands:\n  build - Modular production build (Rollup + integration)\n  build:modules - Alias for build\n  watch - Auto-rebuild (modules)\n  start - Dev server (http://localhost:8000)\n  start:source - Modular dev page (http://localhost:8001)\n  test - Run Playwright tests\n  clean - Remove config files'",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:chromium": "playwright test --project=chromium",
    "test:report": "playwright show-report",
    "clean": "rm -f source/current-config*.json"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "chokidar-cli": "^3.0.0",
    "rollup": "^4.52.3",
    "terser": "^5.31.0"
  },
  "keywords": [
    "creative",
    "portfolio",
    "physics",
    "canvas",
    "animation",
    "interactive"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/alexander-beck-studio-website"
  },
  "dependencies": {
    "pixi.js": "^7.3.2"
  }
}
